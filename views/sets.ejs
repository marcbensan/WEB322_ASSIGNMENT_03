<%- include('partials/navbar', {page: '/lego/sets'}) %>
<div class="container mx-auto p-4">
  <div class="hero bg-base-200 rounded-lg p-6">
    <div class="hero-content text-center">
      <div class="max-w-md">
        <h1 class="text-5xl font-bold">Collection</h1>

        <p class="py-6">
          Browse the entire collection. Click the theme to filter by themes such
          as:
          <a href="/lego/sets?theme=avengers" class="btn btn-primary btn-sm"
            >Avengers</a
          >
          <a href="/lego/sets?theme=creator" class="btn btn-primary btn-sm"
            >Creator</a
          >
          <a href="/lego/sets?theme=batman" class="btn btn-primary btn-sm"
            >Batman</a
          >
        </p>
      </div>
    </div>
  </div>
  <br />
  <div class="overflow-x-auto overflow-y-hidden">
    <table class="table table-zebra">
      <!-- head -->
      <tbody>
        <% sets.forEach((set) => { %>
        <tr>
          <td>
            <div class="avatar">
              <div
                class="w-32 h-32 rounded-lg bg-transparent bg-no-repeat bg-cover"
                style="background-image: url('<%= set.img_url %>')"
              ></div>
            </div>
          </td>

          <td>
            <%= set.name %> |
            <a href="/lego/sets?theme=<%= set.theme_name %>" class="btn mt-2 btn-xs"
              ><%= set.theme_name %></a
            >
          </td>

          <td>
            <span class="font-bold">Year: </span> <%= set.year %> |
            <span class="font-bold">Parts:</span> <%= set.num_parts %>
          </td>
          <th>
            <a href="/lego/sets/<%= set.set_num %>" class="btn btn-secondary btn-sm"
              >Details</a
            >
          </th>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</div>
