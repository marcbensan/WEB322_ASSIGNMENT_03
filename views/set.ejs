<%- include('partials/navbar', {page: '/lego/sets/:id'}) %>
<div class="container mx-auto p-4">
  <div class="hero bg-base-200 rounded-lg p-6">
    <div class="hero-content text-center">
      <div class="max-w-md">
        <h1 class="text-5xl font-bold"><%= set.name %></h1>

        <p class="py-6">
          Below, you will find detailed information about the set: <%= set.name
          %>
        </p>
      </div>
    </div>
  </div>

  <br />

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <img
        class="w-full rounded-lg"
        src="<%= set.img_url %>"
        alt=" Set Image"
      />
    </div>
    <div class="prose">
      <p class="p-8">
        <span class="font-bold">Set Name: </span> <%= set.name %> <br />
        <span class="font-bold">Year Released: </span> <%= set.year %> <br />
        <span class="font-bold">Theme: </span> <%= set.theme %> <br />
        <span class="font-bold">Number of Parts: </span> <%= set.num_parts %>
        <br /><br />

        <span id="quote">quote</span>
        <br /><br />
        <a class="btn btn-accent btn-md" href="/lego/editSet/<%= set.set_num %>"
          >EDIT SET: <%= set.name %></a
        >
        <a
          class="btn btn-primary btn-md"
          href="#"
          onclick="history.back(); return false;"
          >RETURN</a
        >
      </p>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    fetch("https://quotable.io/random")
      .then((response) => response.json())
      .then((data) => {
        const quote = document.getElementById("quote");
        quote.innerHTML = `<blockquote>"${data.content}"</blockquote>-<em>${data.author}</em>`;
      })
      .catch((err) => {
        console.log("Error fetching data", err);
      });
  });
</script>
